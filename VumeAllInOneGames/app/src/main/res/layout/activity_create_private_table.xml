<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg"
    tools:context=".CreatePrivateTableActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuildeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuiudeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96998125" />

    <ImageView
        android:id="@+id/heading_laypout"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        android:background="@drawable/orangyyellow_bottomradius_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHeight_percent="0.15"
        />

    <TextView
        android:id="@+id/heading"
        style="@style/LargeSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createprivatetable_heading"
        android:textSize="@dimen/pixel_19dp"
        app:layout_constraintBottom_toTopOf="@id/bottomGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="@id/topGuildeLine"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        android:layout_marginEnd="@dimen/pixel_8dp"
        android:src="@mipmap/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/heading"
        app:layout_constraintEnd_toStartOf="@+id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/heading"
        app:layout_constraintWidth_percent="0.08" />

    <TextView
        android:id="@+id/txt_chooseagame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="@string/stepone_chooseagame"
        android:textColor="@color/orangydark"
        android:textSize="@dimen/pixel_18dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomGuideline"
        app:layout_constraintEnd_toStartOf="@id/rightGuiudeline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/heading_laypout"
        app:layout_constraintVertical_bias="0.09" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_one_card"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/frangipani_roundedcorner_bg"
        app:layout_constraintTop_toBottomOf="@+id/txt_chooseagame"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        >
        <TextView
            android:id="@+id/txt_gamename_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/onezeroone_name"
            android:textColor="@color/orangydark"
            android:textSize="@dimen/pixel_18dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/img_selection_indicator_one"
            android:layout_width="@dimen/pixel_0dp"
            android:layout_height="@dimen/pixel_0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.3"
            android:src="@mipmap/tick_green_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.85"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_two_card"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        android:background="@drawable/frangipani_roundedcorner_bg"
        app:layout_constraintBottom_toBottomOf="@+id/game_one_card"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/game_one_card"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_gamename_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/onezeroone_name"
            android:textColor="@color/orangydark"
            android:textSize="@dimen/pixel_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/img_selection_indicator_two"
            android:layout_width="@dimen/pixel_0dp"
            android:layout_height="@dimen/pixel_0dp"
            android:src="@mipmap/tick_disabled_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintWidth_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_three_card"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        android:background="@drawable/frangipani_roundedcorner_bg"
        app:layout_constraintBottom_toBottomOf="@+id/game_two_card"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/game_two_card"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.24">

        <TextView
            android:id="@+id/txt_gamename_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikmedium"
            android:text="@string/onezeroone_name"
            android:textColor="@color/orangydark"
            android:textSize="@dimen/pixel_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/img_selection_indicator_three"
            android:layout_width="@dimen/pixel_0dp"
            android:layout_height="@dimen/pixel_0dp"
            android:src="@mipmap/tick_disabled_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintWidth_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_enterbetamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="@string/steptwo_enterbetamount"
        android:textColor="@color/orangydark"
        android:textSize="@dimen/pixel_18dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomGuideline"
        app:layout_constraintEnd_toStartOf="@id/rightGuiudeline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/game_one_card"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/edt_enterbetamount"
        style="@style/EditextStyle"
        android:background="@drawable/edittext_bg"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="@dimen/pixel_15dp"
        android:hint="@string/enter_tableid_hint"
        android:textColorHint="@color/orangy_yellow_opacity"
        app:layout_constraintTop_toBottomOf="@id/txt_enterbetamount"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        />

    <TextView
        android:id="@+id/txt_chooseatime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="@string/stepthree_chooseatimeoptional"
        android:textColor="@color/orangydark"
        android:textSize="@dimen/pixel_18dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomGuideline"
        app:layout_constraintEnd_toStartOf="@id/rightGuiudeline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/edt_enterbetamount"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/edt_hour_val"
        style="@style/EditextStyle"
        android:background="@drawable/edittext_bg"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="@dimen/pixel_16dp"
        android:textAlignment="center"
        android:hint="@string/hour_hint"
        android:textColorHint="@color/orangy_yellow_opacity"
        app:layout_constraintTop_toBottomOf="@id/txt_chooseatime"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        />

    <EditText
        android:id="@+id/edt_minute_val"
        style="@style/EditextStyle"
        android:background="@drawable/edittext_bg"
        android:hint="@string/minute_hint"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColorHint="@color/orangy_yellow_opacity"
        android:textSize="@dimen/pixel_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_hour_val"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toEndOf="@id/edt_hour_val"
        app:layout_constraintTop_toTopOf="@+id/edt_hour_val"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintWidth_percent="0.12" />

    <EditText
        android:id="@+id/edt_median_val"
        style="@style/EditextStyle"
        android:background="@drawable/edittext_bg"
        android:hint="@string/time_median"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColorHint="@color/orangy_yellow_opacity"
        android:textSize="@dimen/pixel_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_minute_val"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintHeight_percent="0.055"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@id/edt_minute_val"
        app:layout_constraintTop_toTopOf="@+id/edt_minute_val"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintWidth_percent="0.12" />

    <TextView
        android:id="@+id/privatetable_msg"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuiudeline"
        app:layout_constraintTop_toBottomOf="@+id/edt_median_val"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        android:text="@string/private_table_msg"
        android:gravity="left"
        android:fontFamily="@font/rubikregular"
        android:textColor="@color/orangydark"
        android:textSize="@dimen/pixel_18dp"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/btn_login"
        style="@style/JoshButton"
        android:background="@drawable/button_bg"
        android:text="@string/btn_createnow"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_forgotpass"
        app:layout_constraintTop_toTopOf="@id/topGuildeLine"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/rightGuiudeline"
        app:layout_constraintVertical_bias="0.98"
        />
</androidx.constraintlayout.widget.ConstraintLayout>