<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/rank_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/rubikregular"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp"
        android:paddingRight="@dimen/pixel_4dp"
        android:text="#"
        android:textAllCaps="true"
        android:textColor="@color/base"
        android:textSize="@dimen/pixel_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/rank_value"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pixel_0dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rubikregular"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/pixel_16dp"
        app:layout_constraintBottom_toBottomOf="@id/rank_prefix"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toRightOf="@+id/rank_prefix"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rank_prefix"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/rank_prize_amount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pixel_0dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rubikmedium"
        android:gravity="center"
        android:text="â‚¹3 lakhs"
        android:textColor="@color/black"
        android:textSize="@dimen/pixel_16dp"
        app:layout_constraintTop_toTopOf="@id/rank_prefix"
        app:layout_constraintBottom_toBottomOf="@id/rank_prefix"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pixel_1dp"
        android:background="@color/base"
        app:layout_constraintTop_toBottomOf="@+id/rank_prefix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


