    <style name="AppTheme" parent="AppTheme.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
<!--        <item name="android:statusBarColor">@color/primary_dark</item>-->
    </style>


    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DialogHeading">
        <item name="android:fontFamily">@font/rubikbold</item>
        <item name="android:textSize">@dimen/pixel_25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogMessage">
        <item name="android:fontFamily">@font/rubikmedium</item>
        <item name="android:textSize">@dimen/pixel_20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialog70">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="ErrorThemeDialogCustom" parent="CustomDialog70">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/DrawerTransaprentBG</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_16dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/pixel_18dp</item>
        <item name="android:textColor">@color/base</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubikbold</item>
    </style>

    <style name="SubTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/pixel_11dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimerTextAppearance" parent="SubTabTextAppearance">
        <item name="android:textSize">@dimen/pixel_10dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MatchHeadingAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/pixel_13dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AddCashActionBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="android:textColor">@color/secondary_yellow</item>
        <item name = "android:paddingLeft">@dimen/pixel_8dp</item>
        <item name = "android:paddingRight">@dimen/pixel_4dp</item>
        <item name = "android:paddingTop">@dimen/pixel_4dp</item>
        <item name = "android:paddingBottom">@dimen/pixel_4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/rubikbold</item>
    </style>

    <style name="BottomMenu">
        <item name="android:layout_width">@dimen/pixel_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/pixel_13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name = "android:drawablePadding">@dimen/pixel_2dp</item>
        <item name="android:paddingBottom">@dimen/pixel_4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="FantasyButton">
        <item name = "android:paddingLeft">@dimen/pixel_8dp</item>
        <item name = "android:paddingRight">@dimen/pixel_8dp</item>
        <item name = "android:paddingTop">@dimen/pixel_2dp</item>
        <item name = "android:paddingBottom">@dimen/pixel_2dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="android:textSize">@dimen/pixel_14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContestDetailsTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/maroon</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="OpponentNameAppearance" parent="AppTabTextAppearance">
        <item name="autoSizeTextType">uniform</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LabelValues">
        <item name="android:layout_width">@dimen/pixel_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_16dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
        <item name="android:text">@string/not_available</item>
    </style>

    <style name="SubTextMediumLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_16dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="SubTextSmallLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_16dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="SubTextVerySmallLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_13dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="SubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_18dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="LargeSubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_21dp</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pixel_16dp</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="layout_constraintBottom_toBottomOf">@id/bottomGuideline</item>
        <item name="layout_constraintEnd_toStartOf">@id/rightGuiudeline</item>
        <item name="layout_constraintVertical_bias">0</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:paddingTop">@dimen/pixel_5dp</item>
        <item name="android:paddingBottom">@dimen/pixel_5dp</item>
    </style>

    <style name="MenuIcons">
        <item name="android:layout_width">@dimen/pixel_0dp</item>
        <item name="android:layout_height">@dimen/pixel_0dp</item>
        <item name="layout_constraintWidth_percent">0.1</item>
        <item name="android:paddingRight">@dimen/pixel_8dp</item>
        <item name="layout_constraintStart_toStartOf">@id/leftGuideline</item>
    </style>

    <style name="EditextStyle">
        <item name="android:layout_width">@dimen/pixel_0dp</item>
        <item name="android:layout_height">@dimen/pixel_0dp</item>
        <item name="fontFamily">@font/rubikregular</item>
        <item name="android:paddingLeft">@dimen/pixel_8dp</item>
        <item name="android:paddingRight">@dimen/pixel_8dp</item>
        <item name="android:textSize">@dimen/pixel_17dp</item>
        <item name="android:textColor">@color/orangydark</item>
        <item name="layout_constraintHeight_max">@dimen/pixel_55dp</item>
        <item name="layout_constraintHeight_percent">0.075</item>
        <item name ="android:paddingTop">@dimen/pixel_5dp</item>
        <item name ="android:paddingBottom">@dimen/pixel_5dp</item>
        <item name="android:textCursorDrawable">@mipmap/cursor_drawable</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="JoshButton">
        <item name = "android:paddingLeft">@dimen/pixel_8dp</item>
        <item name = "android:paddingRight">@dimen/pixel_8dp</item>
        <item name = "android:paddingTop">@dimen/pixel_5dp</item>
        <item name = "android:paddingBottom">@dimen/pixel_5dp</item>
        <item name="elevation">@dimen/pixel_10dp</item>
        <item name="android:layout_width">@dimen/pixel_0dp</item>
        <item name="android:layout_height">@dimen/pixel_0dp</item>
        <item name="layout_constraintHeight_percent">0.075</item>
        <item name="layout_constraintHeight_max">@dimen/pixel_55dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubikmedium</item>
        <item name="android:textSize">@dimen/pixel_18dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
