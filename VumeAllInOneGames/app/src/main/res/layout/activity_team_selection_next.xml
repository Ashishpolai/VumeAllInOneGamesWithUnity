<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamSelectionNextActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/action_bar"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:cardElevation="@dimen/dimen_12dp"
        app:cardBackgroundColor="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.08"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:gravity = "center_vertical"
            android:paddingTop="@dimen/pixel_8dp"
            android:paddingBottom="@dimen/pixel_8dp"
            >
            <ImageView
                android:id="@+id/back_menu"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="@dimen/pixel_0dp"
                android:src="@mipmap/white_back_arrow"
                android:layout_margin="@dimen/pixel_8dp"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.055"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintHorizontal_bias="0.001"
                />

            <TextView
                android:id="@+id/heading_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h 07m left"
                style="@style/LargeSubHeading"
                android:textColor="@color/white"
                android:textSize="@dimen/pixel_17dp"
                app:layout_constraintLeft_toRightOf="@+id/back_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/query_menu"
                app:layout_constraintHorizontal_bias="0.1"
                android:textAllCaps="false"
                android:fontFamily="@font/rubikmedium"
                />


            <ImageView
                android:id="@+id/query_menu"
                android:layout_width="@dimen/pixel_35dp"
                android:layout_height="@dimen/pixel_35dp"
                android:src="@mipmap/query_icon"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:elevation="@dimen/dimen_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                android:padding="@dimen/pixel_1dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:cardElevation="@dimen/pixel_12dp"
        app:cardBackgroundColor="@color/secondarygreyone"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/selectmatch_subheading"
                style="@style/SubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/selectmatch_indicator_icon"
                android:gravity="center"
                android:text="@string/select_match"
                android:textColor="@color/milky_white"
                android:textSize="@dimen/pixel_13dp"
                android:layout_marginTop="@dimen/pixel_2dp"
                android:layout_marginBottom="@dimen/pixel_8dp"
                android:layout_marginLeft="@dimen/pixel_8dp"
                />

            <TextView
                android:id="@+id/createteam_subheading"
                style="@style/SubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectmatch_indicator_icon"
                android:gravity="center"
                android:text="@string/create_team"
                android:textColor="@color/white"
                android:textSize="@dimen/pixel_13dp"
                android:layout_marginTop="@dimen/pixel_2dp"
                android:layout_marginBottom="@dimen/pixel_8dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/joincontest_subheading"
                style="@style/SubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/selectmatch_indicator_icon"
                android:gravity="center"
                android:text="@string/join_contest"
                android:textColor="@color/secondarygreythree"
                android:textSize="@dimen/pixel_13dp"
                android:layout_marginTop="@dimen/pixel_2dp"
                android:layout_marginBottom="@dimen/pixel_8dp"
                android:layout_marginRight="@dimen/pixel_8dp"
                />

            <ImageView
                android:id="@+id/selectmatch_indicator_icon"
                android:layout_width="@dimen/pixel_25dp"
                android:layout_height="@dimen/pixel_25dp"
                android:background="@drawable/round_icon_with_shadow"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/pixel_8dp"
                android:layout_marginBottom="@dimen/pixel_8dp"
                android:layout_marginLeft="@dimen/pixel_8dp"
                android:src="@mipmap/tick_black"
                android:padding="@dimen/pixel_6dp"
                />

            <ImageView
                android:id="@+id/creatematch_indicator_icon"
                android:layout_width="@dimen/pixel_25dp"
                android:layout_height="@dimen/pixel_25dp"
                android:background="@drawable/round_icon_with_shadow"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/selectmatch_indicator_icon"
                android:layout_alignBottom="@id/selectmatch_indicator_icon"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/joincontest_indicator_icon"
                android:layout_width="@dimen/pixel_25dp"
                android:layout_height="@dimen/pixel_25dp"
                android:background="@drawable/roundbg_withwhiteborder"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/selectmatch_indicator_icon"
                android:layout_alignBottom="@id/selectmatch_indicator_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/pixel_8dp"
                />

            <View
                android:id="@+id/selectmatch_to_creatteam_connector"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="@dimen/pixel_4dp"
                android:background="@color/milky_white"
                android:layout_toRightOf="@+id/selectmatch_indicator_icon"
                android:layout_toLeftOf="@id/creatematch_indicator_icon"
                android:layout_marginTop="@dimen/pixel_18dp"
                />

            <View
                android:id="@+id/createteam_to_joincontest_connector"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="@dimen/pixel_4dp"
                android:background="@color/jumbo"
                android:layout_toRightOf="@+id/creatematch_indicator_icon"
                android:layout_toLeftOf="@id/joincontest_indicator_icon"
                android:layout_marginTop="@dimen/pixel_18dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/team_selection_captain_vicecaptain_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/page_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:cardElevation="@dimen/pixel_12dp"
        app:cardBackgroundColor="@color/secondary_grey"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/pixel_16dp"
            android:paddingBottom="@dimen/pixel_16dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_heading"
                style="@style/LargeSubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_next"
                android:layout_alignBottom="@id/btn_next"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/bottom_divider"
                android:gravity="center"
                android:text="@string/choose_captainandvicecaptain"
                android:textColor="@color/black"
                android:textSize="@dimen/pixel_15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_subheading"
                style="@style/SubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_next"
                android:layout_alignBottom="@id/btn_next"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/bottom_divider"
                android:gravity="center"
                android:text="@string/captain_vicecaptain_benefits"
                android:textColor="@color/black"
                android:textSize="@dimen/pixel_15dp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/pixel_4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/allplayers_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/team_selection_captain_vicecaptain_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:cardElevation="@dimen/pixel_12dp"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:id="@+id/player_selection_heading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:orientation="horizontal"
            android:weightSum="10.5"
            >

            <TextView
                android:id="@+id/players_type_heading"
                style="@style/SubTextMediumLabel"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/type_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/pixel_12dp"
                android:paddingTop="@dimen/pixel_8dp"
                android:paddingBottom="@dimen/pixel_8dp"
                android:layout_weight="2.5"
                android:textStyle="bold"
                android:drawableRight="@mipmap/down_redarrow"
                />

            <TextView
                android:id="@+id/player_points_heading"
                style="@style/SubTextMediumLabel"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/points_heading"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/pixel_12dp"
                android:paddingTop="@dimen/pixel_8dp"
                android:paddingBottom="@dimen/pixel_8dp"
                android:layout_weight="4"
                />

            <TextView
                android:id="@+id/selected_percent_heading"
                style="@style/SubTextMediumLabel"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/percent_captain_heading"
                android:maxLines="1"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/pixel_12dp"
                android:paddingTop="@dimen/pixel_8dp"
                android:paddingBottom="@dimen/pixel_8dp"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                />

            <TextView
                android:id="@+id/credits_heading"
                style="@style/SubTextMediumLabel"
                android:layout_width="@dimen/pixel_0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/percent_vicecap_heading"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/pixel_12dp"
                android:paddingTop="@dimen/pixel_8dp"
                android:paddingBottom="@dimen/pixel_8dp"
                android:layout_weight="2"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectplayer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pixel_0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/allplayers_heading"
        app:layout_constraintBottom_toTopOf="@id/edittext_teamname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/pixel_8dp"
        android:background="@color/grey"
        />

    <EditText
        android:id="@+id/edittext_teamname"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="wrap_content"
        style="@style/JoshButton"
        app:layout_constraintBottom_toTopOf="@+id/save_team_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/edittext_bg"
        android:textAllCaps="true"
        android:hint="@string/enter_teamname_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/pixel_16dp"
        android:padding="@dimen/pixel_8dp"
        android:layout_marginLeft="@dimen/pixel_12dp"
        android:layout_marginRight="@dimen/pixel_12dp"
        android:layout_marginBottom="@dimen/pixel_4dp"
        android:maxLines="1"
        android:singleLine="true"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/save_team_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grey"
        app:cardElevation="@dimen/pixel_22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/bottom_divider"
                android:layout_width="@dimen/pixel_2dp"
                android:layout_height="0dp"
                android:layout_alignTop="@+id/btn_saveteam"
                android:layout_alignBottom="@id/btn_saveteam"
                android:layout_centerInParent="true"
                android:background="@color/grey"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_saveteam"
                style="@style/JoshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/pixel_12dp"
                android:layout_marginTop="@dimen/pixel_4dp"
                android:layout_marginRight="@dimen/pixel_12dp"
                android:layout_marginBottom="@dimen/pixel_4dp"
                android:layout_toRightOf="@id/bottom_divider"
                android:background="@drawable/button_green_bg"
                android:text="@string/save_team"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/pixel_16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_teampreview"
                style="@style/JoshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/bottom_divider"
                android:layout_marginLeft="@dimen/pixel_12dp"
                android:layout_marginTop="@dimen/pixel_4dp"
                android:layout_marginRight="@dimen/pixel_12dp"
                android:layout_marginBottom="@dimen/pixel_4dp"
                android:background="@drawable/button_white_bg"
                android:text="@string/team_preview"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/pixel_16dp"
                android:visibility="visible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>