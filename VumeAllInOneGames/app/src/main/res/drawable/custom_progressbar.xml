<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pixel_5dp"/>
<!--            <stroke android:color="@color/loading_screen_progress" android:width="1dp"></stroke>-->
            <gradient
                android:startColor="@color/secondary"
                android:centerColor="@color/secondary"
                android:centerY="1.0"
                android:endColor="@color/secondary"
                android:angle="360"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/pixel_5dp"/>
                <gradient
                    android:startColor="@color/primary_blue"
                    android:centerColor="@color/primary_blue"
                    android:centerY="1.0"
                    android:endColor="@color/primary_blue"
                    android:angle="360"
                    />
            </shape>
        </clip>
    </item>
</layer-list>