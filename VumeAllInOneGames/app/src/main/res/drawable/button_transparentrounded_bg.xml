<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/pixel_5dp" />
            <gradient android:angle="-90" android:startColor="@color/disabled" android:endColor="@color/disabled"  />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/pixel_5dp" />
            <stroke android:color="@color/white" android:width="@dimen/pixel_1dp"/>
            <solid android:color="@color/DrawerTransaprentBG_80"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/pixel_5dp" />
            <stroke android:color="@color/white" android:width="@dimen/pixel_1dp"/>
            <gradient android:angle="-90" android:startColor="@color/DrawerTransaprentBG" android:endColor="@color/DrawerTransaprentBG" />
        </shape>
    </item>
</selector>