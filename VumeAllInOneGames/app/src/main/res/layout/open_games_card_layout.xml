<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/card_fav_three"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pixel_120dp"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/pixel_8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="match_parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/turquoise_roundedcorner_bg"
        >
    <TextView
        android:id="@+id/label_gamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="Points\nRummy"
        android:textColor="@color/primary"
        android:textSize="@dimen/pixel_13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.15"
        />

    <TextView
        android:id="@+id/label_noof_playerordeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="6"
        android:textColor="@color/primary"
        android:textSize="@dimen/pixel_15dp"
        app:layout_constraintStart_toStartOf="@id/label_gamename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintHorizontal_bias="0"
        />

    <ImageView
        android:id="@+id/img_noofplayersordeals"
        android:layout_width="@dimen/pixel_0dp"
        android:layout_height="@dimen/pixel_0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_multiplayers"
        app:layout_constraintStart_toEndOf="@id/label_noof_playerordeals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_noof_playerordeals"
        app:layout_constraintBottom_toBottomOf="@id/label_noof_playerordeals"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.05"
        />

    <TextView
        android:id="@+id/label_rupees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubikmedium"
        android:text="â‚¹50"
        android:textColor="@color/primary"
        android:textSize="@dimen/pixel_15dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_noof_playerordeals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@id/label_gamename"
        app:layout_constraintTop_toTopOf="@+id/label_noof_playerordeals"
        app:layout_constraintVertical_bias="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>